{% extends 'base.html.twig' %}

{% block body %}
{% set doc_links = {
    'Users list':'admin_user',
    'Roles list':'admin_role',
    'CSV files list':'csvfiles',
    }
%}

<div class="col-sm-3 col-md-2 sidebar">

    {% block submenu %}
        <ul class="nav nav-sidebar">
            {% for key,link in doc_links %}

                    <li><a href="{{ path(link~'_index') }}">{{ key|trans }}</a></li>

            {% endfor %}                       
        </ul>
    {% endblock %}

</div>

<div class="col-sm-9 col-sm-offset-3 col-md-10 col-md-offset-2 main">
    <h1>Role</h1>
<div class="col-lg-4">
    <div class="table-responsive">
        <table class="table table-bordered table-hover record_properties">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ role.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ role.name }}</td>
                </tr>
                <tr>
                    <th>Role</th>
                    <td>{{ role.role }}</td>
                </tr>
            </tbody>
        </table>
    </div>
<a class="btn btn-info" href="{{ path('admin_role_index') }}">Back to the list</a>
<a class="btn btn-warning" href="{{ path('admin_role_edit', { 'id': role.id }) }}">Edit</a>

{{ form_start(delete_form) }}
    <input class="btn btn-danger" type="submit" value="Delete">
{{ form_end(delete_form) }}
</div>
{% endblock %}
